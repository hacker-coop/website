<script type="text/javascript" defer="defer">
function ggt(a,b){
	a=a*1;
	b=b*1;
	if (a<b) return ggt(b,a);
	if (a==b) return a;
	if (a % b == 0) return b;
	f = (a - a % b) / b;
	return ggt(a - f * b, b);
}

function kuerze(id){
	var zid='data-value';
	var nid='data-max';
	z = document.getElementById(id).getAttribute(zid) * 1 ;
	n = document.getElementById(id).getAttribute(nid) * 1 ;
	g = ggt(z, n);
	z = z / g;
	n = n / g;
	// reiner, ggf. auch unechter, bruch
	document.getElementById(id).setAttribute(zid, z);
	document.getElementById(id).setAttribute(nid, n);
	// ggf. ganze zahl mit echtem bruch = gemischter bruch
//	f = z % n;
//	e = (z - f) / n;
//	g = n;
//	document.getElementById(iid).value = "" + e;	// integer part=ganzzahliger Anteil
//	document.getElementById(zid).value = "" + f;	// numerator=z√§hler
//	document.getElementById(nid).value = "" + g ;	// denominator=nenner
}

function progressupdate(repeat){
	setTimeout(function () {
		let e=document.getElementById('deadline');
		let end=new Date('2020-10-31T23:42:00');
		let now=new Date();
		let content=60-Math.ceil((end-now)/(60*60*24*1000));
		e.setAttribute('data-value', content)
		e.value = content;
//		kuerze('deadline');
//		kuerze('compeers');
//		kuerze('share');

        // Beschriftung der Fortschrittsbalken aktualisieren
        let progressElements = document.getElementById('progressbars').getElementsByTagName('progress')
        for (let progressElement of progressElements) {
            let textElement = progressElement.nextElementSibling;
            if (!textElement || textElement.tagName.toLowerCase() !== 'span') {
                return;
            }
            let text = progressElement.dataset.value + '/' + progressElement.dataset.max;
            textElement.innerText = text;
        }

		progressupdate(60*1000);
    }, repeat);
}
setTimeout(progressupdate(),3000);
</script>
